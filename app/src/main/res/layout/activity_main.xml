<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.olympiabardis.doggydaycare.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/dachshund"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/dog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dachshund Daycare"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/about_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/phone_text_view"
        android:text="We babysit sausage dogs"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/address_text_view"
        android:text="1 800 DACH"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_text_view"
        android:text="46th Street New York, NY"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="doggy@gmail.com"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="30sp"/>

</RelativeLayout>
